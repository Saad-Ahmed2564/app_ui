<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F7F6"
    tools:context=".MainActivity18">


    <View
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="100dp"
        android:background="#C1C1C1"
        />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/hdr_art"
        android:layout_marginStart="175dp"
        android:layout_marginTop="110dp"
        />

    <Button
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/cross_art"
        android:layout_marginTop="120dp"
        android:layout_marginStart="30dp"
        />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/sun_art"
        android:layout_marginTop="110dp"
        android:layout_marginStart="320dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Portrait"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginStart="17dp"
        android:layout_marginTop="610dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slow-mo"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginStart="85dp"
        android:layout_marginTop="610dp"
        />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Video"
        android:textAlignment="center"
        android:textColor="#1D6F74"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginStart="160dp"
        android:layout_marginTop="610dp"
        android:background="@drawable/circle4"
        android:backgroundTint="#B6E9EB"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginStart="250dp"
        android:layout_marginTop="610dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Square"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginStart="320dp"
        android:layout_marginTop="610dp"
        />

    <Button
        android:id="@+id/start_vid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle5"
        android:layout_marginStart="152dp"
        android:layout_marginTop="650dp"
        />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/circle6"
        android:backgroundTint="#155F64"
        android:layout_marginTop="660dp"
        android:layout_marginStart="60dp"
        />

    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/gallery_art"
        android:backgroundTint="@color/white"
        android:layout_marginTop="670dp"
        android:layout_marginStart="71dp"
        />

    <Button
        android:id="@+id/photo_button2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/circle6"
        android:backgroundTint="#155F64"
        android:layout_marginTop="660dp"
        android:layout_marginStart="285dp"
        />

    <Button
        android:id="@+id/photo_button1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/photo_button"
        android:backgroundTint="@color/white"
        android:layout_marginTop="668dp"
        android:layout_marginStart="295dp"
        />


</RelativeLayout>