<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F7F6"
    tools:context=".MainActivity13">


    <View
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/curved_square"
        android:layout_marginTop="-20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_your_session"
        android:textSize="20sp"
        android:textColor="#155F64"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_marginStart="60dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/john_cooper1"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:layout_marginStart="60dp"
        />

    <Button
        android:id="@+id/back_mentor"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/left_arrow_back_svgrepo_com"
        android:backgroundTint="#155F64"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="260dp"
        android:src="@drawable/man1"
        app:civ_border_width="4dp"
        app:civ_border_color="#80dad4"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#80dad4"
        android:layout_marginTop="185dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_1500_session"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FEBF0E"
        android:layout_marginTop="200dp"
        android:layout_marginStart="20dp"
        />



    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/face"
        android:backgroundTint="#FEBF0E"
        android:layout_marginTop="200dp"
        android:layout_marginStart="220dp"
        />

    <Button
        android:id="@+id/book_appoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/book_an_appointment"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:backgroundTint="#155F64"
        android:background="@drawable/curved_square_2"
        android:layout_marginTop="700dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="15dp"
        />


    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/star"
        android:backgroundTint="#FEBF0E"
        android:layout_marginTop="160dp"
        android:layout_marginStart="70dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_4_8"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_marginStart="75dp"
        android:layout_marginTop="143dp"
        android:paddingEnd="45dp"
        android:paddingStart="20dp"
        android:padding="15dp"
        android:textStyle="bold"
        />

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/available_time_slots"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="580dp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/_10_00_am"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="#ddefef"
        android:background="@drawable/curved_square_2"
        android:layout_marginTop="620dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:padding="15dp"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/_12_00_pm"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="#ddefef"
        android:background="@drawable/curved_square_2"
        android:layout_marginTop="620dp"
        android:layout_marginStart="260dp"
        android:layout_marginEnd="10dp"
        android:padding="15dp"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/_11_00_am"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:backgroundTint="#0b8fac"
        android:background="@drawable/curved_square_2"
        android:layout_marginTop="620dp"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="30dp"
        android:padding="15dp"
        />





</RelativeLayout>