<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F7F6"
    tools:context=".MainActivity11">


    <View
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/curved_square"
        android:layout_marginTop="-20dp"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/hi_i_m"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/john_cooper1"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="120dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        />

    <Button
        android:id="@+id/back_mentor"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/left_arrow_back_svgrepo_com"
        android:backgroundTint="#155F64"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="260dp"
        android:src="@drawable/man1"
        app:civ_border_width="4dp"
        app:civ_border_color="#80dad4"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#80dad4"
        android:layout_marginTop="165dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drop_me_a_review"
        android:textSize="23sp"
        android:textColor="@color/white"
        android:layout_marginTop="180dp"
        android:layout_marginStart="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="350dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/type_your_experience"
        android:paddingStart="20dp"
        android:paddingBottom="100dp"
        android:background="@drawable/curved_square3"
        />

    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/star2"
        android:backgroundTint="#155F64"
        android:layout_marginTop="550dp"
        android:layout_marginStart="70dp"
        />
    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/star2"
        android:backgroundTint="#155F64"
        android:layout_marginTop="550dp"
        android:layout_marginStart="120dp"
        />
    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/star2"
        android:backgroundTint="#155F64"
        android:layout_marginTop="550dp"
        android:layout_marginStart="170dp"
        />
    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/star2"
        android:backgroundTint="#155F64"
        android:layout_marginTop="550dp"
        android:layout_marginStart="220dp"
        />
    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/star2"
        android:backgroundTint="#155F64"
        android:layout_marginTop="550dp"
        android:layout_marginStart="270dp"
        />

    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/face"
        android:backgroundTint="#FEBF0E"
        android:layout_marginTop="180dp"
        android:layout_marginStart="220dp"
        />

    <Button
        android:id="@+id/submit_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit_feedback"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:backgroundTint="#155F64"
        android:background="@drawable/curved_square_2"
        android:layout_marginTop="730dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="15dp"
        />






</RelativeLayout>