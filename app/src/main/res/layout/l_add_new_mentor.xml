<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F7F6"
    tools:context=".MainActivity12">




    <View
        android:id="@+id/circle1"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-90dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/circle"
        android:clickable="false"
        android:orientation="horizontal"
        android:visibility="visible"
        app:cornerRadius="0dp" />

    <View
        android:id="@+id/circle2"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/circle"
        android:clickable="false"
        android:orientation="horizontal"
        android:visibility="visible"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/back_Signup"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/left_arrow_back_svgrepo_com"
        android:layout_marginStart="20dp"
        android:layout_marginTop="63dp"
        android:backgroundTint="#155F64"
        />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_mentor"
        android:layout_marginTop="110dp"
        android:layout_marginStart="40dp"
        android:textSize="30sp"
        android:textColor="#155F64"
        android:textStyle="bold"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_us_expand"
        android:layout_marginTop="150dp"
        android:layout_marginStart="150dp"
        android:textSize="17sp"
        android:textColor="#155F64"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/curved_square"
        android:layout_marginTop="200dp"
        />

    <View
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/curved_square3"
        android:layout_marginTop="230dp"
        android:layout_marginStart="30dp"
        />

    <Button
        android:id="@+id/take_video"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/video_art"
        android:layout_marginTop="260dp"
        android:layout_marginStart="80dp"
        android:backgroundTint="#155F64"
        />



    <View
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/curved_square3"
        android:layout_marginTop="230dp"
        android:layout_marginStart="210dp"
        />

    <Button
        android:id="@+id/take_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/camera2"
        android:layout_marginTop="260dp"
        android:layout_marginStart="260dp"
        android:backgroundTint="#155F64"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_photo"
        android:layout_marginTop="300dp"
        android:layout_marginStart="235dp"
        android:textSize="15sp"
        android:textColor="#155F64"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_video"
        android:layout_marginTop="300dp"
        android:layout_marginStart="55dp"
        android:textSize="15sp"
        android:textColor="#155F64"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name0"
        android:layout_marginTop="350dp"
        android:layout_marginStart="32dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/EnterName"
        android:textColor="#585555"
        android:layout_marginTop="380dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="17sp"
        android:padding="10dp"
        android:background="@drawable/emailbox"
        android:inputType="text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:layout_marginTop="440dp"
        android:layout_marginStart="32dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_description"
        android:textColor="#585555"
        android:layout_marginTop="470dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="17sp"
        android:padding="10dp"
        android:background="@drawable/emailbox"
        android:inputType="text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status"
        android:layout_marginTop="530dp"
        android:layout_marginStart="32dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/available"
        android:textColor="#585555"
        android:layout_marginTop="560dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="17sp"
        android:padding="10dp"
        android:background="@drawable/emailbox"
        android:inputType="text"
        />

    <Button
        android:id="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upload"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:backgroundTint="#155F64"
        android:background="@drawable/curved_square_2"
        android:layout_marginTop="630dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        />




    <View
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_marginTop="720dp"
        android:background="#155F64"
        />

    <View
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="685dp"
        android:layout_marginStart="160dp"
        android:background="@drawable/circle2"
        />

    <Button
        android:id="@+id/home_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/home_art"
        android:layout_marginTop="720dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#439A96"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:layout_marginTop="760dp"
        android:layout_marginStart="16dp"
        android:textColor="#439A96"
        />

    <Button
        android:id="@+id/search_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/search_art"
        android:layout_marginTop="720dp"
        android:layout_marginStart="95dp"
        android:backgroundTint="#439A96"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:layout_marginTop="760dp"
        android:layout_marginStart="97dp"
        android:textColor="#439A96"
        />

    <Button
        android:id="@+id/create_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/icons8_plus"
        android:layout_marginTop="690dp"
        android:layout_marginStart="165dp"
        android:backgroundTint="@color/white"
        />

    <Button
        android:id="@+id/chat_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/chat_art"
        android:layout_marginTop="720dp"
        android:layout_marginStart="250dp"
        android:backgroundTint="#439A96"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chat"
        android:layout_marginTop="760dp"
        android:layout_marginStart="255dp"
        android:textColor="#439A96"
        />

    <Button
        android:id="@+id/profile_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/profile_art"
        android:layout_marginTop="720dp"
        android:layout_marginStart="325dp"
        android:backgroundTint="#439A96"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:layout_marginTop="760dp"
        android:layout_marginStart="325dp"
        android:textColor="#439A96"
        />





</RelativeLayout>