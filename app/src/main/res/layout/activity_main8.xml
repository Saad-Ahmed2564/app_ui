<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F7F6"
    tools:context=".MainActivity8">


    <View
        android:id="@+id/circle1"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_marginStart="-90dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/circle"
        android:clickable="false"
        android:orientation="horizontal"
        android:visibility="visible"
        app:cornerRadius="0dp" />       <!--Circle No. 1 -->

    <View
        android:id="@+id/circle2"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/circle"
        android:clickable="false"
        android:orientation="horizontal"
        android:visibility="visible"
        app:cornerRadius="0dp" />       <!--Circle No. 2 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find"
        android:layout_marginTop="100dp"
        android:layout_marginStart="50dp"
        android:textSize="35sp"
        android:textColor="#155F64"
        android:textStyle="bold"
        />   <!--"Let's Find..."-->

    <androidx.appcompat.widget.SearchView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/circle3"
        app:queryHint="Search"
        app:queryBackground="@android:color/transparent"
        />

    <View
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_marginTop="720dp"
        android:background="#155F64"
        />

    <View
        android:layout_width="500dp"
        android:layout_height="350dp"
        android:layout_marginTop="370dp"
        android:background="#AAECE6"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/browse"
        android:layout_marginTop="400dp"
        android:layout_marginStart="20dp"
        android:textSize="25sp"
        android:textColor="#155F64"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:layout_marginStart="100dp"
        android:text="@string/entre"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/diagonal_arrow"
            android:layout_marginTop="490dp"
            android:layout_marginStart="340dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:layout_marginStart="100dp"
        android:text="@string/per"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/diagonal_arrow"
        android:layout_marginTop="580dp"
        android:layout_marginStart="340dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="660dp"
        android:layout_marginStart="100dp"
        android:text="@string/edu"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/diagonal_arrow"
        android:layout_marginTop="660dp"
        android:layout_marginStart="340dp"
        />

    <View
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="685dp"
        android:layout_marginStart="160dp"
        android:background="@drawable/circle2"
        />

    <Button
        android:id="@+id/home_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/home_art"
        android:layout_marginTop="720dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#439A96"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:layout_marginTop="760dp"
        android:layout_marginStart="16dp"
        android:textColor="#439A96"
        />

    <Button
        android:id="@+id/search_button1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/search_art"
        android:layout_marginTop="720dp"
        android:layout_marginStart="95dp"
        android:backgroundTint="#D7F7F6"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:layout_marginTop="760dp"
        android:layout_marginStart="97dp"
        android:textColor="#D7F7F6"
        />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/icons8_plus"
        android:layout_marginTop="690dp"
        android:layout_marginStart="165dp"
        android:backgroundTint="@color/white"
        />

    <Button
        android:id="@+id/chat_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/chat_art"
        android:layout_marginTop="720dp"
        android:layout_marginStart="250dp"
        android:backgroundTint="#439A96"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chat"
        android:layout_marginTop="760dp"
        android:layout_marginStart="255dp"
        android:textColor="#439A96"
        />

    <Button
        android:id="@+id/profile_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/profile_art"
        android:layout_marginTop="720dp"
        android:layout_marginStart="325dp"
        android:backgroundTint="#439A96"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:layout_marginTop="760dp"
        android:layout_marginStart="325dp"
        android:textColor="#439A96"
        />

</RelativeLayout>